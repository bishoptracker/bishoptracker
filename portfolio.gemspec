# coding: utf-8

Gem::Specification.new do |spec|
  spec.name          = "Jekyll-Candor"
  spec.version       = "0.1.0"
  spec.authors       = ["Ted Martin"]
  spec.email         = ["etmartinkazoo@gmail.com"]

	spec.summary       = %q{A Jekyll theme for semantic HTML, CSS, and JavaScript. Developers seeking clean, semantic HTML, framework free CSS - use of CSS Grid is encouraged - and vanilla JavaScript.}
	spec.homepage      = "https://github.com/etmartinkazoo/Jekyll-Candor"
  spec.license       = "MIT"

  spec.add_runtime_dependency "jekyll", "~> 3.6"

  spec.add_development_dependency "bundler", "~> 1.12"
  spec.add_development_dependency "rake", "~> 10.0"
end
